    <div id="main-content">
        <h2> lost found items </h2>

        <!-- Item List -->
        <div id="item-list">
            <% if (items.length===0) { %>
                <p>No items found of this type.</p>
                <% } else { %>
                    <% items.forEach(item=> { %>
                        <a href="/lf/items/<%= item._id %>" class="item">
                            <p><strong>Status:</strong>
                                <%= item.landf %>
                            </p>
                            <img src="<%= item.photo ? item.photo : 'placeholder.jpg' %>"
                                alt="<%= item.title %>">
                            <p><strong>Title:</strong>
                                <%= item.title %>
                            </p>
                            <p><strong>Location:</strong>
                                <%= item.location %>
                            </p>
                            <p><strong>Date:</strong>
                                <%= new Date(item.date).toLocaleDateString() %>
                            </p>
                        </a>
                        <% }); %>
                            <% } %>
        </div>
    </div>
</body>

</html>